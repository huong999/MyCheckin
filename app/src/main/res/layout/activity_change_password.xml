<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/txtchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Thay đổi mật khẩu"
                android:textColor="#000066"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtpass"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/txtchange"
                android:layout_marginTop="50dp"
                android:background="@drawable/border_radius_10dp"
                android:hint="Nhập mật khẩu hiện tại"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/txt_pass_new"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/txtpass"
                android:layout_marginTop="50dp"
                android:background="@drawable/border_radius_10dp"
                android:hint="Nhập mật khẩu mới"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txt_pass_conf"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/txt_pass_new"
                android:layout_marginTop="50dp"
                android:background="@drawable/border_radius_10dp"
                android:hint="Nhập mật khẩu mới"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/txt_pass_conf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="Thay đổi mật khẩu"
                android:textSize="18dp">

            </Button>

        </RelativeLayout>

    </LinearLayout>
</layout>